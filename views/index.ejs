<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><% if (pageTitle && pageTitle !== '') { %><%= pageTitle %> - <% } %>Documentation</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: #0a0e27;
            color: #e8e8e8;
            min-height: 100vh;
        }

        .layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 280px;
            background: linear-gradient(180deg, #1a1f3a 0%, #0f1428 100%);
            border-right: 1px solid #2d3748;
            padding: 30px 20px;
            overflow-y: auto;
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            box-shadow: 2px 0 15px rgba(0, 0, 0, 0.3);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 35px;
            padding-bottom: 20px;
            border-bottom: 1px solid #2d3748;
        }

        .sidebar-logo svg {
            width: 26px;
            height: 26px;
            color: #06b6d4;
        }

        .sidebar-logo span {
            font-weight: 700;
            font-size: 1.05em;
            background: linear-gradient(135deg, #06b6d4 0%, #0ea5e9 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .sidebar-section {
            margin-bottom: 30px;
        }

        .sidebar-section-title {
            font-size: 0.7em;
            font-weight: 800;
            text-transform: uppercase;
            color: #64748b;
            margin-bottom: 12px;
            letter-spacing: 1px;
        }

        .sidebar-link {
            display: block;
            padding: 10px 14px;
            color: #94a3b8;
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.25s ease;
            font-size: 0.92em;
            cursor: pointer;
            border-left: 3px solid transparent;
        }

        .sidebar-link:hover {
            color: #e2e8f0;
            background: rgba(6, 182, 212, 0.08);
            border-left-color: #06b6d4;
            padding-left: 16px;
        }

        .sidebar-link.active {
            color: #06b6d4;
            background: rgba(6, 182, 212, 0.12);
            border-left-color: #06b6d4;
            font-weight: 600;
        }

        /* Category Dropdown */
        .category-dropdown {
            position: relative;
            margin-bottom: 8px;
        }

        .category-toggle {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 14px;
            background: rgba(6, 182, 212, 0.05);
            border: 1px solid rgba(6, 182, 212, 0.2);
            border-radius: 6px;
            color: #06b6d4;
            font-weight: 600;
            font-size: 0.92em;
            cursor: pointer;
            transition: all 0.25s ease;
            border-left: 3px solid #06b6d4;
            width: 100%;
        }

        .category-toggle:hover {
            background: rgba(6, 182, 212, 0.12);
            border-color: #06b6d4;
        }

        .category-toggle.open {
            background: rgba(6, 182, 212, 0.12);
            border-color: #06b6d4;
        }

        .category-toggle svg {
            width: 16px;
            height: 16px;
            transition: transform 0.25s ease;
        }

        .category-toggle.open svg {
            transform: rotate(180deg);
        }

        .category-files {
            display: none;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .category-files.open {
            display: block;
            max-height: 500px;
        }

        .category-file-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 14px;
            margin-left: 10px;
            margin-top: 4px;
            background: rgba(6, 182, 212, 0.03);
            border: 1px solid rgba(6, 182, 212, 0.1);
            border-radius: 4px;
            color: #94a3b8;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 0.85em;
        }

        .category-file-item:hover {
            background: rgba(6, 182, 212, 0.1);
            color: #06b6d4;
            border-color: rgba(6, 182, 212, 0.3);
            padding-left: 16px;
        }

        .category-file-icon {
            margin-right: 8px;
            font-size: 1em;
        }

        .category-file-name {
            flex: 1;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-8px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Main content */
        .main-content {
            margin-left: 280px;
            flex: 1;
            display: flex;
        }

        .content {
            flex: 1;
            max-width: 900px;
            padding: 60px 50px;
            min-height: 100vh;
        }

        .content h1 {
            font-size: 2.8em;
            margin-bottom: 15px;
            font-weight: 700;
            background: linear-gradient(135deg, #06b6d4 0%, #0ea5e9 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .content > p:first-of-type {
            font-size: 1.05em;
            color: #cbd5e1;
            margin-bottom: 50px;
            line-height: 1.6;
        }

        .content h2 {
            font-size: 1.9em;
            margin-top: 50px;
            margin-bottom: 20px;
            font-weight: 600;
            color: #e2e8f0;
            border-bottom: 2px solid rgba(6, 182, 212, 0.3);
            padding-bottom: 12px;
        }

        .content h3 {
            font-size: 1.3em;
            margin-top: 30px;
            margin-bottom: 15px;
            font-weight: 600;
            color: #cbd5e1;
        }

        .content p {
            line-height: 1.8;
            color: #a0aec0;
            margin-bottom: 15px;
            font-size: 0.98em;
        }

        .content a {
            color: #06b6d4;
            text-decoration: none;
            transition: color 0.2s;
            font-weight: 500;
        }

        .content a:hover {
            color: #0ea5e9;
            text-decoration: underline;
        }

        /* Markdown Content */
        .markdown-content {
            margin-bottom: 40px;
        }

        .markdown-content h1 {
            font-size: 2.8em;
            margin-bottom: 15px;
            font-weight: 700;
            background: linear-gradient(135deg, #06b6d4 0%, #0ea5e9 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .markdown-content h2 {
            font-size: 1.9em;
            margin-top: 40px;
            margin-bottom: 20px;
            font-weight: 600;
            color: #e2e8f0;
            border-bottom: 2px solid rgba(6, 182, 212, 0.3);
            padding-bottom: 12px;
        }

        .markdown-content h3 {
            font-size: 1.3em;
            margin-top: 30px;
            margin-bottom: 15px;
            font-weight: 600;
            color: #cbd5e1;
        }

        .markdown-content p {
            line-height: 1.8;
            color: #a0aec0;
            margin-bottom: 15px;
            font-size: 0.98em;
        }

        .markdown-content a {
            color: #06b6d4;
            text-decoration: none;
            transition: color 0.2s;
            font-weight: 500;
        }

        .markdown-content a:hover {
            color: #0ea5e9;
            text-decoration: underline;
        }

        .markdown-content ul,
        .markdown-content ol {
            margin-left: 24px;
            margin-bottom: 15px;
        }

        .markdown-content li {
            margin-bottom: 8px;
            line-height: 1.6;
            color: #a0aec0;
        }

        .markdown-content code {
            background: rgba(6, 182, 212, 0.1);
            color: #06b6d4;
            padding: 2px 6px;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
        }

        .markdown-content blockquote {
            border-left: 4px solid #06b6d4;
            padding-left: 16px;
            margin: 20px 0;
            color: #94a3b8;
            font-style: italic;
        }

        .markdown-content hr {
            border: none;
            border-top: 1px solid rgba(6, 182, 212, 0.2);
            margin: 30px 0;
        }

        /* Document cards grid */
        .doc-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 25px;
            margin-top: 40px;
        }

        .doc-card {
            background: linear-gradient(135deg, #1a1f3a 0%, #0f1428 100%);
            border: 1px solid #2d3748;
            border-radius: 10px;
            padding: 24px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
            text-decoration: none;
            color: inherit;
            display: flex;
            flex-direction: column;
            position: relative;
            overflow: hidden;
        }

        .doc-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(6, 182, 212, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .doc-card:hover::before {
            left: 100%;
        }

        .doc-card:hover {
            border-color: #06b6d4;
            background: linear-gradient(135deg, #1a1f3a 0%, #0f1428 100%);
            box-shadow: 0 8px 32px rgba(6, 182, 212, 0.15);
            transform: translateY(-4px);
        }

        .doc-card-title {
            font-size: 1.2em;
            font-weight: 700;
            margin-bottom: 12px;
            color: #e2e8f0;
            position: relative;
            z-index: 1;
        }

        .doc-card-description {
            font-size: 0.92em;
            color: #94a3b8;
            margin-bottom: 18px;
            flex: 1;
            line-height: 1.6;
            position: relative;
            z-index: 1;
        }

        .doc-card-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: relative;
            z-index: 1;
        }

        .doc-card-category {
            display: inline-block;
            background: rgba(6, 182, 212, 0.15);
            color: #06b6d4;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 0.8em;
            font-weight: 600;
            border: 1px solid rgba(6, 182, 212, 0.3);
            transition: all 0.2s ease;
        }

        .doc-card:hover .doc-card-category {
            background: rgba(6, 182, 212, 0.25);
            border-color: #06b6d4;
        }

        .doc-card-arrow {
            color: #06b6d4;
            font-size: 1.3em;
            transition: transform 0.3s ease;
        }

        .doc-card:hover .doc-card-arrow {
            transform: translateX(4px);
        }

        .intro-section {
            margin-bottom: 40px;
        }

        .empty-state {
            text-align: center;
            padding: 80px 40px;
            color: #64748b;
        }

        .empty-state h2 {
            font-size: 2em;
            margin-bottom: 15px;
            color: #cbd5e1;
        }

        .empty-state p {
            font-size: 1.05em;
        }

        /* Scrollbar */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #2d3748;
            border-radius: 5px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #475569;
        }

        /* Responsive */
        @media (max-width: 1400px) {
            .doc-grid {
                grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
                border-right: none;
                border-bottom: 1px solid #2d3748;
                padding: 20px;
            }

            .main-content {
                margin-left: 0;
                flex-direction: column;
            }

            .content {
                padding: 40px 25px;
            }

            .content h1 {
                font-size: 2em;
            }

            .doc-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="layout">
        <aside class="sidebar">
            <div class="sidebar-logo">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                </svg>
                <span>Documentation</span>
            </div>

            <div class="sidebar-section">
                <div class="sidebar-section-title">Documentation</div>
                <a class="sidebar-link active" href="/">Home</a>
                <% if (mdSidebarLinks && mdSidebarLinks.length > 0) { %>
                    <% mdSidebarLinks.forEach(link => { %>
                        <a class="sidebar-link" href="/docs/<%= link.id %>"><%= link.title %></a>
                    <% }); %>
                <% } %>
            </div>

            <% if (categories.length > 0) { %>
                <div class="sidebar-section">
                    <div class="sidebar-section-title">Browse by Category</div>
                    <% categories.forEach(category => { %>
                        <div class="category-dropdown">
                            <button class="category-toggle" onclick="toggleCategory(event, '<%= category %>')">
                                <span>üìÅ <%= category %></span>
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                                </svg>
                            </button>
                            <div class="category-files" id="files-<%= category %>">
                                <% 
                                    const categoryFiles = files.filter(f => f.category === category);
                                    categoryFiles.forEach(file => {
                                %>
                                    <a class="category-file-item" href="/docs/<%= category %>/<%= file.id %>">
                                        <span class="category-file-name">
                                            <span class="category-file-icon">üìÑ</span><%= file.title || 'Untitled' %>
                                        </span>
                                        <span style="color: #06b6d4; font-size: 1em;">‚Üí</span>
                                    </a>
                                <% }); %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content">
                <% if (currentPage === 'home') { %>
                    <div id="main-content" class="markdown-content">
                        <%- mainContent %>
                    </div>
                <% } else { %>
                    <div class="markdown-content">
                        <% if (pageTitle) { %>
                            <h1><%= pageTitle %></h1>
                        <% } %>
                        <%- mainContent %>
                    </div>
                    
                    <% if ((previousFile || nextFile) && currentCategory) { %>
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 80px; padding-top: 30px; border-top: 1px solid rgba(6, 182, 212, 0.2);">
                            <% if (previousFile) { %>
                                <a href="/docs/<%= currentCategory %>/<%= previousFile.id %>" style="display: flex; align-items: center; gap: 8px; color: #06b6d4; text-decoration: none; font-weight: 600; transition: all 0.2s ease;">
                                    <span style="font-size: 1.2em;">‚Üê</span>
                                    <span><%= previousFile.title || 'Previous' %></span>
                                </a>
                            <% } else { %>
                                <div></div>
                            <% } %>
                            
                            <% if (nextFile) { %>
                                <a href="/docs/<%= currentCategory %>/<%= nextFile.id %>" style="display: flex; align-items: center; gap: 8px; color: #06b6d4; text-decoration: none; font-weight: 600; transition: all 0.2s ease;">
                                    <span><%= nextFile.title || 'Next' %></span>
                                    <span style="font-size: 1.2em;">‚Üí</span>
                                </a>
                            <% } else { %>
                                <div></div>
                            <% } %>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </main>
    </div>

    <script>
        function toggleCategory(event, category) {
            const toggle = event.target.closest('.category-toggle');
            const filesContainer = document.getElementById('files-' + category);
            
            document.querySelectorAll('.category-files.open').forEach(el => {
                if (el.id !== 'files-' + category) {
                    el.classList.remove('open');
                }
            });
            
            document.querySelectorAll('.category-toggle.open').forEach(el => {
                if (el !== toggle) {
                    el.classList.remove('open');
                }
            });

            filesContainer.classList.toggle('open');
            toggle.classList.toggle('open');
        }

        function updateActiveLink() {
            const currentPath = window.location.pathname;
            const links = document.querySelectorAll('.sidebar-section:first-child .sidebar-link');
            
            links.forEach(link => {
                link.classList.remove('active');
                const href = link.getAttribute('href');
                if (href === currentPath) {
                    link.classList.add('active');
                }
            });
        }

        document.addEventListener('DOMContentLoaded', updateActiveLink);
        updateActiveLink();
    </script>
</body>
</html>
